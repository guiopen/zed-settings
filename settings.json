// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "base_keymap": "VSCode",
  "format_on_save": "off",
  "autosave": { "after_delay": { "milliseconds": 1000 } },
  "tabs": { "git_status": true, "file_icons": true },
  "project_panel": { "hide_root": true },
  "resize_all_panels_in_dock": [], // [] means every panel has its own size

  "lsp": {
    "gopls": {
      "initialization_options": {
        "ui.completion.usePlaceholders": false
      }
    }
  },

  "theme": {
    "mode": "dark",
    "light": "Zedokai Light (Filter Sun)",
    "dark": "Zedokai (Filter Spectrum)"
  },
  "icon_theme": "Material Icon Theme",
  "ui_font_family": "Inter",
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 14.0,
  "buffer_font_size": 14.0,
  "agent_ui_font_size": 15.0,
  "ui_font_weight": 500.0,
  "buffer_font_weight": 400.0,
  "buffer_line_height": { "custom": 1.5 },

  "auto_install_extensions": {
    "material-icon-theme": true,
    "zedokai": true,
    "sql": true,
    "html": true,
    "java": true,
    "svelte": true,
    "git-firefly": true
  },

  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },

  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "model_parameters": [{ "temperature": 0.0 }],
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "thread_summary_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  }
}
