// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "base_keymap": "VSCode",
  "file_scan_inclusions": ["node_modules/"],
  //"soft_wrap": "editor_width",
  "sticky_scroll": { "enabled": true },
  "format_on_save": "off",
  "use_on_type_format": false,
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": false,
  "autosave": { "after_delay": { "milliseconds": 1000 } },
  "tabs": { "git_status": true, "file_icons": true },
  "project_panel": { "hide_root": true },
  "resize_all_panels_in_dock": [], // [] means every panel has its own size

  "lsp": {
    "gopls": {
      "settings": {
        "usePlaceholders": false,
      },
    },
  },

  "theme": {
    "mode": "dark",
    "dark": "Zedokai (Filter Spectrum)",
    "light": "Zedokai Light (Filter Sun)",
  },
  "icon_theme": "Material Icon Theme",
  "ui_font_family": "Inter",
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 15.0,
  "buffer_font_size": 16.0,
  "agent_ui_font_size": 16.0,
  "agent_buffer_font_size": 15.0,
  "ui_font_weight": 500.0,
  "buffer_font_weight": 400.0,
  "buffer_line_height": { "custom": 1.5 },

  "auto_install_extensions": {
    "material-icon-theme": true,
    "zedokai": true,
    "sql": true,
    "html": true,
    "java": true,
    "svelte": true,
    "git-firefly": true,
  },

  "disable_ai": false,
  "show_edit_predictions": false,
  "edit_predictions": {
    "provider": "copilot",
  },

  "language_models": {
    "openai_compatible": {
      "llama.cpp": {
        "api_url": "http://127.0.0.1:8080/v1",
        "available_models": [
          {
            "name": "local model",
            "max_tokens": 32000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": true,
            },
          },
        ],
      },
      "Qwen Code": {
        "api_url": "https://portal.qwen.ai/v1",
        "available_models": [
          {
            "name": "coder-model",
            "max_tokens": 1000000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
        ],
      },
    },
  },

  "agent": {
    "favorite_models": [
      {
        "provider": "llama.cpp",
        "model": "local model",
      },
      {
        "provider": "copilot_chat",
        "model": "oswe-vscode-prime",
      },
      {
        "provider": "copilot_chat",
        "model": "gemini-3-pro-preview",
      },
    ],
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "default_model": {
      "provider": "llama.cpp",
      "model": "local model",
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1",
    },
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1",
    },
    "thread_summary_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1",
    },
  },
}
